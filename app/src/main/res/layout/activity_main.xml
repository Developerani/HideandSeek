<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_purple">

    <TextView
            android:text="Hide and Seek"
            android:textColor="@color/white"
            android:fontFamily="serif-monospace"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textAlignment="center"
            android:id="@+id/textView2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/phone_no"
            android:hint="@string/enter_phone_no"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>
    <EditText
            android:layout_width="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/otp"
            android:layout_height="55dp"
            android:hint="@string/enter_otp"
            android:paddingLeft="15dp"
            android:background="@drawable/custom_input"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/phone_no"
            app:layout_constraintEnd_toEndOf="@+id/phone_no" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <Button
            android:text="Verify"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit_otp"
            android:background="@drawable/custom_button_gradient"
            app:layout_constraintStart_toStartOf="@+id/otp"
            app:layout_constraintEnd_toEndOf="@+id/otp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/otp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="  Submit OTP"
            android:layout_width="150dp"
            android:background="@drawable/custom_button_gradient"
            android:layout_height="0dp"
            android:id="@+id/button2" app:layout_constraintStart_toStartOf="@+id/phone_no"
            app:layout_constraintEnd_toEndOf="@+id/phone_no" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_no" app:layout_constraintHorizontal_bias="1.0"/>
</android.support.constraint.ConstraintLayout>